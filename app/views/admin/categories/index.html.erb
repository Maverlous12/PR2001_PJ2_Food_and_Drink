<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Categories</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
          <li class="breadcrumb-item active">Categories</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <button type="button" class="btn btn-warning" style="margin-bottom: 1rem;" data-toggle="modal" data-target="#myModal">
    Create category
  </button>

  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Create</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <%= form_for :category, url: admin_categories_path do |f|%>
          <div class="modal-body">
           <div class="custom-file">
              <b>Avata</b>
              <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
              <%= f.file_field :image, class:"custom-file-input", id:"validatedCustomFile"%>
            </div>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class:"form-control" , placeholder:"Enter ..." %>
            </div>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <div class="form-group">
              <%= f.submit "Create", class:"btn btn-outline-warning"%>
             </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
  <div class="card">
  <!-- /.card-header -->
  <div class="card-body">
    <table id="data-table" class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th> Avatar</th>
          <th>Name Category</th>
          <th> Action </th>
          <th> Products </th>
        </tr>
      </thead>
      <tbody id="myTable">
          <% @categories.each_with_index  do |category, index| %>
            <%= render 'category', category: category, index: index %>
          <% end %>
      </tbody>
  </table>
  </div>

<script type="text/javascript">
$(document).ready(function() {
  $('#data-table').dataTable()
});
</script>