<tr>
  <td><%= index +1 %></td>
  <td><%= image_tag(category.image, alt:"") if category.image.attached?%></td>
  <td><%= category.name %></td>
  <td>
   <!-- Trigger the modal with a button -->
    <%= link_to "#", "data-toggle" => "modal", "data-target" => "#category-#{category.id}" do %>
      <i class='fas fa-wrench' style='color: black'></i>
    <% end %> 
    <!-- Modal -->
    <div class="modal fade" id="category-<%= category.id%>" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button> 
          </div>
          <%= form_for [:admin, category] do |f|%>
            <div class="modal-body">
              <div class="container">
                <div class="card card-warning">
                  <div class="card-header">
                    <h3 style="text-align: center;">Edit Category</h3>
                  </div>
                      <!-- /.card-header -->
                  <div class="card-body">
                    <div class="custom-file">
                      <label>Avatar</label>
                      <%= f.file_field :image%>
                    </div>
                    <div class="form-group">
                      <label>Name</label>
                      <%= f.text_field :name, class:"form-control" , placeholder:"Enter ..." %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <%= f.submit "Update", class:"btn btn-outline-warning"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= link_to admin_category_path(category), method: :delete , remote: true, class:"delete-category" do %>
      <i class='far fa-trash-alt' style='color: black'></i>
    <% end %>
  </td>
  <td>
    <%= link_to "List Products", admin_category_path(category) , class:"btn btn-outline-warning"%>
  </td>
</tr>