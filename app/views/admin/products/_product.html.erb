<tr>
  <td><%= link_to product.id, admin_category_product_path(product.category, product) %></td>
  <td><%= link_to product.name_product, admin_category_product_path(product.category, product) %></td>
  <td><%= product.information %></td>
  <td><%= product.price %></td>
  <td><%= product.kind %></td>
  <td>
    <%= link_to admin_category_product_path(product.category.id,product) do %>
      <i class='fas fa-edit' style='color: black'></i>
    <% end %>
    <%= link_to edit_admin_category_product_path(product.category.id,product) do %>
      <i class='fas fa-wrench' style='color: black'></i>
    <% end %>
    <%= link_to admin_category_product_path(product.category.id, product), remote: true, method: :delete, data: {confirm: "Are you sure?"}, class:"delete-product" do %>
      <i class='far fa-trash-alt' style='color: black'></i>
    <% end %>
  </td>
</tr>