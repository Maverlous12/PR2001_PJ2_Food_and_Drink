<section class="login_register">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-6 col-12">
        <h1>Admin Login Now</h1>
        <div class="login-container">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="login-form">
                  <div class="login-logo">
                      <%= link_to root_path do %>
                        <%= image_tag 'logo1.jpg', class:"logo"%>
                      <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"video-form" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, class:"video-form"  %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                  <div class="form-group">
                    <%= f.check_box :remember_me, class:"form-controll" %>
                    <%= f.label :Remember_me %>
                  </div>
                  <% end %>
                  <%= f.submit "Login", class:"login-btn btn-link" %>
                  <div class="forgot-password">
                    <%= link_to 'Forgot Password', new_manager_password_path %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
